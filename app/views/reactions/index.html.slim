.title
  .title-content
    = "Réactions"

.show
  .show-content
    = @information.content
  .show-button
    = link_to "réagis", information_path(@information.id)

.index
  - @reactions.each do |reaction|
    .index-content
      .index-content-information
        = Information.find(reaction.information_id).content
      .index-content-middle
        = reaction.content
      .index-content-bottom
        = link_to "réagis", information_path(reaction.information_id)
